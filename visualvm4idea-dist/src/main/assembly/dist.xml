<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.1.0-SNAPSHOT.xsd">

    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>${plugin.id}</baseDirectory>

    <dependencySets>

        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>net.orfjackal.visualvm4idea:visualvm4idea-agent</exclude>
                <exclude>net.orfjackal.visualvm4idea:visualvm4idea-help</exclude>
                <!-- HACK: forms_rt must be excluded here because of ideauidesigner-maven-plugin which requires it to have compile scope, even though IDEA already provides it for plugins -->
                <exclude>com.intellij:forms_rt</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <outputFileNameMapping>visualvm4idea-agent.jar</outputFileNameMapping>
            <includes>
                <include>net.orfjackal.visualvm4idea:visualvm4idea-agent</include>
            </includes>
        </dependencySet>

        <dependencySet>
            <outputDirectory>help</outputDirectory>
            <outputFileNameMapping>visualvm4idea-help.jar</outputFileNameMapping>
            <includes>
                <include>net.orfjackal.visualvm4idea:visualvm4idea-help</include>
            </includes>
        </dependencySet>

    </dependencySets>

    <fileSets>

        <fileSet>
            <includes>
                <include>README*</include>
            </includes>
        </fileSet>

    </fileSets>

</assembly>
